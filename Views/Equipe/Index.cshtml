@model Equipe 

@* estamos alterando o título da página *@
@{
    ViewData["Title"] = "Equipes";
}

<form
    method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label>ID da equipe</label>
    <input type="text" name="IdEquipe"> </input>

    <label>Nome</label>
    <input type="text" name="Nome"> </input>

    <label>Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>

    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da Equipe @equipe.Nome" width="60"></td> 
                <td><a asp-area="Excluir esses dados" asp-controller="Equipe" asp-asp-action="Excluir" asp-asp-route-id="@equipe.IdEquipe"></a></td>

            </tr>
        }
    </tbody>

</table>