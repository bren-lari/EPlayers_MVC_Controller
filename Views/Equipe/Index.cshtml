@model Equipe 

@* estamos alterando o título da página *@
@{
    ViewData["Title"] = "Equipes";
}

<form
    method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID da equipe</label>
    <input type="text" name="IdEquipe"> </input>

    <label>Nome</label>
    <input type="text" name="Nome"> </input>

    <label>Imagem</label>
    <input type="text" name="Imagem"> </input>

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>

    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td>@equipe.Imagem</td>
            </tr>
        }
    </tbody>

</table>